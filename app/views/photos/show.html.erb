<div>
  <div>
    <h1>
      Photo details
    </h1>

    <dl>
      <dt>
        Image
      </dt>
      <dd>
        <img src="<%= @the_photo.image %>">
      </dd>
      <dt>
        Caption
      </dt>
      <dd>
        <%= @the_photo.caption %>
      </dd>

      <dt>
        Owner
      </dt>
      <dd>
        <%= @the_photo.owner.username %>
      </dd>

      <dt>
        Posted
      </dt>
      <dd>
        <%= time_ago_in_words(@the_photo.created_at) %> ago
      </dd>

      <dt>
        Likes count
      </dt>
      <dd>
        <%= @the_photo.likes.count %>
      </dd>
      
      <dt>
        Comments count
      </dt>
      <dd>
        <%= @the_photo.comments.count %>
      </dd>

      <dt>Fans</dt>
      <% if @the_photo.likes.count >0 %>
      <dd><%= @matching_likes.first.fan.username %></dd>
      <% end %>

      <dt>Add a fan</dt>

      <% if @the_photo.likes.where(:fan_id => @current_user.id).at(0) == nil %>      
      <dd>
        <form action="/insert_like" method="post">
          <input type="hidden" value=<%=@the_photo.id%> name="query_photo_id">
          <button>Like</button>
        </form>
      </dd>

      <% else %>
      <dd>
        <a href="/delete_like/<%= @the_photo.likes.where(:fan_id => @current_user.id).at(0).id %>">Unlike photo</a>
      </dd>
      <% end %>

      <% if @the_photo.owner_id == @current_user.id %>
      <dt>
        Delete photo
      </dt>
      <dd>
        <a href="/delete_photo/<%=@the_photo.id%>">Delete this photo</a>
      </dd>
      <% end %>


    </dl>
  </div>
</div>

<h2>Comments</h2>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>

  <% @the_photo.comments.each do |a_comment| %>
  <tr>
    <td> <%= a_comment.author.username %></td>

    <td> <%= a_comment.body %>
    </td>

    <td>
       <%= time_ago_in_words(a_comment.created_at) %> ago
    </td>
  </tr>  
  <tr>

  <%end%>
</table>

<h3>Add a new comment</h3>

<form action="/insert_comment" method="post">
  <input type="hidden" value=<%=@the_photo.id%> name="query_photo_id">
  <input type="hidden" value = <%= @current_user.id%> name = "query_author_id">
  
  <label for="browser_comment">Comment</label>
  <textarea id="browser_comment" name="query_body" placeholder="Enter a comment..."></textarea>

  <button>Add comment</button>
</form>